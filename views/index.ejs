		<h3>Messages</h3>
		<ul class="messages">
			<!-- 'message' array gets passed in from server, which allows you to use array methods in EJS -->
			<% messages.forEach((message)=>{ %>
			<li class="message">
				<span><%= message.name %></span>
				<span><%= message.msg %></span>
				<span><%= message.count %></span>
				<span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
				<span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
				<span><i class="fa fa-trash" aria-hidden="true"></i></span>
			</li>
			<% }) %>
		</ul>

		<h2>Add a message</h2>

		<!-- this is the route + object properties for the app.post -->
		<form action="/messages" method="POST">
			<input type="text" placeholder="name" name="name" />
			<input type="text" placeholder="message" name="msg" />
			<!-- button must be submit type if using this template -->
			<button type="submit">Submit</button>
		</form>

		<script src="main.js"></script>
	</body>
